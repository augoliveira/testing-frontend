{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
    EXPERIMENTAL_useProjectService: {
      allowDefaultProjectForFiles: [
  -      "**/*.js",
  +      "./*.js"
      ]
    }
  },
  "include": ["node_modules"]
}