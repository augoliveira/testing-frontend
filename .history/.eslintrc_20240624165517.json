{
  "env": {
    "browser": true,
    "es2024": true,
    "greasemonkey": true,
    "webextensions": true
  },

  "extends": "eslint:recommended",

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "globals": {},

  "plugins": ["@stylistic/js"],

  "rules": {
    "no-case-declarations": "off",
    "more-rules": "... truncated..."
  },

  "overrides": [
    {
      "files": ["*.user.js"],
      "excludedFiles": "*.none.js",
      "rules": {
        "quotes": ["error", "single"]
      }
    }
  ]
}
